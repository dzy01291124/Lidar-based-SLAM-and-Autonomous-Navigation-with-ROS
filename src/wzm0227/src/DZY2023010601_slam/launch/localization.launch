<launch>
    <arg name="map" default="$(find wzm0227_mapping)/../../map/test.yaml"/>
    <arg name="rviz" default="true"/>

    <param name="use_sim_time" value="true"/>
    <node pkg="wzm0227_mapping" type="xju_relocation" name="xju_relocation" output="screen"/>
    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map)"/>
    <include file="$(find wzm0227_mapping)/launch/amcl_diff.launch"/>

    <group if="$(arg rviz)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find wzm0227_mapping)/rviz/slam.rviz" />
    </group>
</launch>
